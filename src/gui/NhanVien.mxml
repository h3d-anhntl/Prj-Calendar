<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 xmlns:g="gui.*"
		 creationComplete="group1_creationCompleteHandler(event)"
		 currentState="nhanVienListAvatar">
	
	<s:layout>
		<s:VerticalLayout>
			
		</s:VerticalLayout>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				nhanVienHeader.addEventListener('change',onButtonBarChange);
				
			}
			
			protected function onButtonBarChange(event:IndexChangeEvent):void
			{
				if(event.newIndex == 1){
					currentState = "nhanVienTable"
				}else{
					currentState = "nhanVienListAvatar";
				}
			}
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="nhanVienTable" />
		<s:State name="nhanVienListAvatar" />
	</s:states>
	

	<s:Group width="100%">		
		<g:NhanVienHeader id="nhanVienHeader"/>			
	</s:Group>
	<s:Group width="100%" height="100%">
		<g:NhanVienTable width="100%" height="100%" 
						 includeIn="nhanVienTable">
			
		</g:NhanVienTable>
		<g:NhanVienListAvatar height="100%" width="100%" 
							  includeIn="nhanVienListAvatar">
			
		</g:NhanVienListAvatar>
	</s:Group>
</s:Group>
