<?xml version="1.0" encoding="utf-8"?>

<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:mx="library://ns.adobe.com/flex/mx">
  <!-- host component -->
  <fx:Metadata>
    [HostComponent("spark.components.Panel")]
  </fx:Metadata>
  
  <!-- states -->
  <s:states>
    <s:State name="disabled" />
    <s:State name="normal" />
    <s:State name="disabledWithControlBar" />
    <s:State name="normalWithControlBar" />
  </s:states>
 
  <s:Rect left="0" right="0" top="0" bottom="0">
    <s:stroke>
      <s:SolidColorStroke color="0x696969" />
    </s:stroke>
    <s:fill>
      <s:SolidColor color="0xffffff" />
    </s:fill>
  </s:Rect>
  
  <s:VGroup width="100%" height="100%" left="1" right="1" top="1" bottom="1" gap="0">
    
    <s:Group width="100%" >
      <s:Rect width="100%" height="100%">
        <s:fill>
          <s:LinearGradient rotation="90">
            <s:GradientEntry color="0xFDFDFD" />
            <s:GradientEntry color="0xD8D8D8" />
          </s:LinearGradient>      
        </s:fill>
      </s:Rect>
      <s:Label id="titleDisplay" maxDisplayedLines="1" width="100%"
               fontSize="12" verticalCenter="3" horizontalCenter="0"
               paddingLeft="5" paddingRight="5" paddingBottom="4" textAlign="left" />
    </s:Group>
    <s:Line width="100%" >
      <s:stroke>
        <s:SolidColorStroke color="0xC0C0C0" />
      </s:stroke>
    </s:Line> 
    <s:Group id="contentGroup" width="100%" height="100%" />
  </s:VGroup>
</s:Skin>
