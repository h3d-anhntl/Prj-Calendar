<?xml version="1.0" encoding="utf-8"?>

<fprj:CalendarGridRendererBase
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fprj="http://f-project.net/xmlns/fprj/2013">
	
	<fprj:states>
		<s:State name="normal" />
		<s:State name="today" />
		<s:State name="out" />
	</fprj:states>
	
	<fx:Metadata>
		[ResourceBundle("calendar")]
	</fx:Metadata>  
	
	<s:Rect width="100%" height="100%">        
		<s:fill>
			<!--- @private -->
			<s:SolidColor alpha="0.3" color="0xFFFFFF" color.today="0xFFCC00" />            
		</s:fill>       
	</s:Rect>
	
	<s:Line left="1" bottom="0" top="0" includeIn="today" >
		<s:stroke>
			<s:SolidColorStroke color="0xEEBB00" />
		</s:stroke>
	</s:Line>
	
	<s:Line right="0" bottom="0" top="0" includeIn="today" >
		<s:stroke>
			<s:SolidColorStroke color="0xEEBB00" />
		</s:stroke>
	</s:Line>
	
	<!--- @private -->  
	<!-- The non working ranges -->
	<fprj:TimeRangeGroup id="nonWorkingRanges" 
						 width="100%" height="100%"
						 vertical="false">
		<fprj:rangeRenderer>
			<fx:Component>
				<s:Rect displayObjectSharingMode="usesSharedObject">
					<s:fill>
						<s:SolidColor color="0xcccccc" alpha="0.3" />  
					</s:fill>          
				</s:Rect>  
			</fx:Component>      
		</fprj:rangeRenderer>
	</fprj:TimeRangeGroup>
	
	<!-- The time selection -->
	<fprj:TimeRangeGroup id="timeSelection" 
						 left="0" right="0" 
						 top="1" bottom="0"                                 
						 vertical="false" >
		<fprj:rangeRenderer>
			<fx:Component>
				<s:Rect width="100%" height="100%"  displayObjectSharingMode="usesSharedObject" >
					<s:fill>
						<s:SolidColor color="0xA8C6EE" alpha="0.5" />  
					</s:fill>
				</s:Rect>         
			</fx:Component>      
		</fprj:rangeRenderer>
	</fprj:TimeRangeGroup>
	
	<!-- Left cell separator -->  
	<s:Line left="0" top="0" bottom="-1" depth="3" visible="{columnIndex!=0}">
		<s:stroke>
			<s:SolidColorStroke color="0xc0c0c0" />
		</s:stroke>
	</s:Line>  
	
</fprj:CalendarGridRendererBase>