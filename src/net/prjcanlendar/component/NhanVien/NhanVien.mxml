<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 xmlns:gui="net.prjcanlendar.gui.*"
		 creationComplete="group1_creationCompleteHandler(event)"
		 currentState="nhanVienListAvatar" xmlns:NhanVien="net.prjcanlendar.component.NhanVien.*">
	
	<s:layout>
		<s:VerticalLayout>
			
		</s:VerticalLayout>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				nhanVienHeader.addEventListener('change',onButtonBarChange);
				
			}
			
			protected function onButtonBarChange(e:IndexChangeEvent):void
			{
				if(e.newIndex == 1){
					currentState = "nhanVienTable"
				}else{
					currentState = "nhanVienListAvatar";
				}
			}
			
			
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="nhanVienTable" />
		<s:State name="nhanVienListAvatar" />
	</s:states>
	

	<s:Group width="100%">		
		<NhanVien:NhanVienHeader id="nhanVienHeader"/>			
	</s:Group>
	<s:Group width="100%" height="100%">
		<NhanVien:NhanVienTable width="100%" height="100%" 
						 includeIn="nhanVienTable">
			
		</NhanVien:NhanVienTable>
		<NhanVien:NhanVienListAvatar height="100%" width="100%" 
							  includeIn="nhanVienListAvatar">
			
		</NhanVien:NhanVienListAvatar>
	</s:Group>
</s:Group>
